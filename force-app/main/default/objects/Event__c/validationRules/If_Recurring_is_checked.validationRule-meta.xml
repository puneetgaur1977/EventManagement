<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>If_Recurring_is_checked</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 Recurring__c,
 ISBLANK(TEXT(Frequency__c))
)</errorConditionFormula>
    <errorMessage>You must need to select the frequency if recurring is checked</errorMessage>
</ValidationRule>
